{
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
          "*": ["src/*", "node_modules/*"]
      },
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "strictNullChecks": true
  },
  "include": ["./src/**/*"]
}